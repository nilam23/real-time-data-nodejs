<%- include('partials/header'); -%>

<div class="container mt-3">
  <h2>All posts</h2><br>

  <% posts.forEach(post => { %>
  <div class="card" style="width:400px">
    <img class="card-img-top" src="data:image/jpg;base64,<%= post.image.toString('base64') %>" alt="Card image" style="width:100%">
    <div class="card-body">
      <h4 class="card-title">By <i><%= post.owner.name %></i></h4>
      <h6>on <%= post.createdAt.toString().split('GMT')[0] %></h6>
      <p class="card-text"><%= post.caption %></p>
    </div>
  </div>
  <br>
  <% }); %>

</div>

<%- include('partials/footer'); -%>